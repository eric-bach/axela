{
  "openapi": "3.0.0",
  "info": {
    "title": "Reward Dollars Services Bot API",
    "version": "1.0.0",
    "description": "Reward Dollars service APIs for transacting with a member's AMA reward dollars"
  },
  "paths": {
    "/rewards/balance/{memberId}": {
      "get": {
        "summary": "Sub task to get member's reward dollar balance",
        "description": "Once we have the member Id, we can get the reward dollar balance for the member",
        "operationId": "getRewardBalance",
        "parameters": [
          {
            "name": "memberId",
            "in": "query",
            "description": "Member Id",
            "required": true,
            "schema": {
              "type": "int"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Get member reward dollar balance",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "memberId": {
                      "type": "int",
                      "description": "Member Id"
                    },
                    "balance": {
                      "type": "decimal",
                      "description": "Member reward dollar balance"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/rewards/transaction/{memberId}": {
      "post": {
        "summary": "Redeems a member's reward dollars",
        "description": "Reward Dollars service APIs for transacting with a member's AMA reward dollars",
        "operationId": "redeemRewardDollars",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "amount": {
                    "type": "int",
                    "description": "Reward Dollars to redeem in cents"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "transactionid": {
                      "type": "int",
                      "description": "Transaction Id"
                    },
                    "balance": {
                      "type": "int",
                      "description": "Amount of reward dollars remaining in cents"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request. One or more required fields are missing or invalid."
          }
        }
      }
    }
  }
}
